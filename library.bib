@article{kibble1961,
  ABSTRACT = {An argument leading from the Lorentz invariance of the Lagrangian to the introduction of the gravitational field is presented. Utiyama{'}s discussion is extended by considering the 10‐parameter group of inhomogeneous Lorentz transformations, involving variation of the coordinates as well as the field variables. It is then unnecessary to introduce {\textit{a priori}} curvilinear coordinates or a Riemannian metric, and the new field variables introduced as a consequence of the argument include the vierbein components {$ \tensor{h}{_k^\mu}$} as well as the \mkbibquote { local affine connection} {$\tensor{A}{^i_{j\mu }}$}. The extended transformations for which the 10 parameters become arbitrary functions of position may be interpreted as general coordinate transformations and rotations of the vierbein system. The free Lagrangian for the new fields is shown to be a function of two covariant quantities analogous to {$F_{\mu\nu}$ } for the electromagnetic field, and the simplest possible form is just the usual curvature scalar density expressed in terms of {$\tensor{h}{ _k^\mu}$} and {$\tensor{A}{^i_{j \mu}}$}. This Lagrangian is of first order in the derivatives, and is the analog for the vierbein formalism of Palatini{'}s Lagrangian. In the absence of matter, it yields the familiar equations {$R_{\mu\nu}=0$} for empty space, but when matter is present there is a difference from the usual theory (first pointed out by Weyl) which arises from the fact that {$ \tensor{A}{^i_{j\mu}}$} appears in the matter field Lagrangian, so that the equation of motion relating {$\tensor{A}{^i_{j\mu}}$} to { $\tensor{h}{_k^\mu}$} is changed. In particular, this means that, although the covariant derivative of the metric vanishes, the affine connection {$\tensor{\Gamma}{^\lambda_{\mu\nu}} $} is nonsymmetric. The theory may be reexpressed in terms of the Christoffel connection, and in that case additional terms quadratic in the \mkbibquote{spin density} {$ \tensor{S}{^k_{ij}}$} appear in the Lagrangian. These terms are almost certainly too small to make any experimentally detectable difference to the predictions of the usual metric theory.},
  AUTHOR = {Kibble, Tom W. B.},
  DATE = {1961},
  DOI = {10.1063/1.1703702},
  FILE = {kibble1961},
  ISSN = {00222488},
  JOURNALTITLE = {Journal of Mathematical Physics},
  PAGES = {212--221},
  TITLE = {Lorentz invariance and the gravitational field},
  VOLUME = {2},
}

