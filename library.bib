  DATE = {2015-12},
  DOI = {10.1088/0264-9381/32/24/243001},
  EPRINT = {1501.07274},
  EPRINTCLASS = {gr-qc},
  EPRINTTYPE = {arXiv},
  FILE = {berti2015},
  JOURNALTITLE = {Classical and Quantum Gravity},
  NUMBER = {24},
