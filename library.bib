  VOLUME = {75},
}

@article{teyssandier1983,
  ABSTRACT = {The exterior Cauchy problem is discussed for the fourth-‐order theories of gravity derived from the Lagrangian densities {$ \mathcal{L}= \sqrt{-g}\left(R+(a/2)R^2+bR_{\mu\nu}R^{\mu\nu} \right )- \kappa \mathcal{L}_m$}. When {$b\neq 0$ }, the Cauchy problem can be solved by the standard method already used in general relativity. When {$b=0$ }, the problem cannot be formulated as in the case where {$b\neq 0$ }, since the corresponding fourth‐-order theory is shown to be equivalent to a second‐‐order scalar–‐tensor theory. This scalar–‐tensor theory is proved to coincide with one of the models of gravity proposed by O'Hanlon in order to present a covariant version of the massive dilaton theory suggested by Fujii. This result is generalized: The models of O'Hanlon are shown to be indistinguishable from the fourth-‐order theories derived from the Lagrangian densities {$\mathcal{L}=\sqrt{-g} f(R)-\kappa\mathcal{L} _m$ }, where {$f$} is any real function such that {$f''(R)$} does not identically vanish.},
